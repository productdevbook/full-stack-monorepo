{
  "version": "0.2.0",
  "private": true,
  "workspaces": ["apps/*", "packages/*"],
  "scripts": {
    "dev": "turbo run dev --parallel --no-cache",
    "dev:vue-storybook": "turbo run dev --parallel --no-cache --filter=@productdevbook/storybook-vue",
    "dev:web": "turbo run dev --parallel --no-cache --filter=vue-web --filter=@oku/api --filter=app-nestjs --filter=oku-i18n",
    "dev:admin": "turbo run dev --parallel --no-cache --filter=vue-admin --filter=@oku/api --filter=app-nestjs --filter=oku-i18n",
    "dev:mobile": "turbo run dev --parallel --no-cache --filter=vue-mobile --filter=@oku/api  --filter=app-nestjs --filter=oku-i18n",
    "dev:ui:web": "turbo run dev --parallel --no-cache --filter=vue-web --filter=@productdevbook/storybook-vue",
    "dev:ui:mobile": "turbo run dev --parallel --no-cache --filter=vue-mobile --filter=@productdevbook/storybook-vue",
    "dev:nestjs": "turbo run dev --filter=app-nestjs",
    "build": "turbo run build",
    "build:nestjs": "turbo run build --parallel --filter=app-nestjs",
    "build:vue-web": "turbo run build --parallel --filter=vue-web",
    "build:vue-mobile": "turbo run build --parallel --filter=vue-mobile",
    "app": "pnpm --filter vue-mobile refresh",
    "run:android": "pnpm --filter vue-mobile ionic capacitor run android",
    "run:ios": "pnpm --filter vue-mobile ionic capacitor run ios",
    "reverse": "adb reverse tcp:4000 tcp:4000",
    "mail:dev": "pnpm --filter mail dev",
    "mail:build": "pnpm --filter mail build",
    "ionic:build": "pnpm --filter nestjs build",
    "api:dev": "pnpm --filter nestjs dev",
    "db:init": "pnpm --filter app-nestjs migrate:create",
    "db:create": "pnpm --filter app-nestjs migrate:create",
    "db:update": "pnpm --filter app-nestjs migrate:update",
    "db:up": "pnpm --filter app-nestjs migrate:up",
    "db:down": "pnpm --filter app-nestjs migrate:down",
    "db:seed": "pnpm --filter app-nestjs seeder:run",
    "db:fresh": "pnpm --filter app-nestjs migrate:fresh",
    "db:show": "pnpm --filter app-nestjs migrate:show",
    "generate": "pnpm --filter @oku/api build && pnpm --filter api app:create",
    "api:build": "pnpm --filter @oku/api graphql-ts",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "clean": "turbo run clean --parallel --no-cache",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "postinstall": "git config core.autocrlf false"
  },
  "devDependencies": {
    "@antfu/eslint-config": "0.25.2",
    "@types/ip": "1.1.0",
    "@types/lodash": "4.14.182",
    "chokidar": "3.5.3",
    "eslint": "8.20.0",
    "ip": "2.0.0",
    "prettier": "2.7.1",
    "sass": "1.54.0",
    "turbo": "1.3.4",
    "unbuild": "0.7.6",
    "@oku/api": "workspace:*",
    "@oku/config": "workspace:*",
    "oku-i18n": "workspace:*",
    "@oku/tsconfig": "workspace:*",
    "vue-app": "workspace:*",
    "vue-design-system": "workspace:*",
    "@productdevbook/email": "workspace:*",
    "app-nestjs": "workspace:*",
    "vue-mobile": "workspace:*",
    "vue-web": "workspace:*"
  },
  "engines": {
    "npm": "8.x",
    "node": "16.x"
  },
  "packageManager": "pnpm@7.6.0",
  "dependencies": {
    "add": "2.0.6",
    "axios": "0.27.2",
    "date-fns": "2.29.1",
    "lodash": "4.17.21",
    "pinia": "2.0.16"
  }
}
